@model List<GalleryApp.Models.ActionLog>

@{
    ViewData["Title"] = "Admin - Action Logs";
}

<h2>Admin - Action Logs</h2>

@if (Model.Count == 0)
{
    <p>No logs yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Entity</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.TimestampUtc.ToLocalTime()</td>
                        <td>@(l.UserEmail ?? "(anonymous)")</td>
                        <td><strong>@l.Action</strong></td>
                        <td>@(l.EntityType ?? "-") @if (!string.IsNullOrWhiteSpace(l.EntityId)) {
                        <span>(@l.EntityId)</span>
                    }
    </td>
                    <td style="max-width: 600px; white-space: normal;">@l.Details</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
