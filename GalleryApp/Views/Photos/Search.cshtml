@model GalleryApp.Models.ViewModels.PhotoSearchViewModel

@{
    ViewData["Title"] = "Search Photos";
}

<h2>Search photos</h2>

<form asp-action="Search" method="post" class="mb-4">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Hashtags (comma separated)</label>
            <input class="form-control" asp-for="Hashtags" placeholder="#cat, travel" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Author email contains</label>
            <input class="form-control" asp-for="AuthorEmail" placeholder="gmail / john" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Min size (MB)</label>
            <input class="form-control" asp-for="MinSizeMb" type="number" step="0.1" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Max size (MB)</label>
            <input class="form-control" asp-for="MaxSizeMb" type="number" step="0.1" />
        </div>

        <div class="col-md-3">
            <label class="form-label">From date</label>
            <input class="form-control" asp-for="FromDate" type="date" />
        </div>

        <div class="col-md-3">
            <label class="form-label">To date</label>
            <input class="form-control" asp-for="ToDate" type="date" />
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Search</button>
        <a class="btn btn-outline-secondary" asp-controller="Photos" asp-action="Search">Reset</a>
    </div>
</form>

@if (Model.Results == null || Model.Results.Count == 0)
{
    <p>No results yet. Try searching.</p>
}
else
{
    <div class="row">
        @foreach (var p in Model.Results)
        {
            var tags = p.PhotoHashtags.Select(x => x.Hashtag.Tag).ToList();

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <a href="@Url.Action("Details", "Photos", new { id = p.Id })">
                        <img class="card-img-top"
                             src="@Url.Action("File", "Photos", new { id = p.Id })"
                             style="height: 220px; object-fit: cover;" />
                    </a>

                    <div class="card-body">
                        <div><strong>@(p.User?.Email ?? "Anonymous")</strong></div>
                        <div class="text-muted" style="font-size: 0.9rem;">
                            @p.UploadedAtUtc.ToLocalTime()
                            • @(Math.Round(p.SizeBytes / 1024.0 / 1024.0, 2)) MB
                        </div>

                        <div class="mt-2">
                            @p.Description
                        </div>

                        <div class="mt-2" style="font-size: 0.9rem;">
                            @if (tags.Count > 0)
                            {
                                @string.Join(", ", tags.Select(t => "#" + t))
                            }
                        </div>

                        <div class="mt-3">
                            <a class="btn btn-sm btn-outline-primary"
                               href="@Url.Action("Details", "Photos", new { id = p.Id })">
                                Open
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
