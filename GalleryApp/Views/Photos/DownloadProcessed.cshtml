@model GalleryApp.Models.ViewModels.DownloadProcessedViewModel

@{
    ViewData["Title"] = "Download Processed Photo";
}

<h2>Download processed photo</h2>

<form asp-action="DownloadProcessed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PhotoId" />

    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Resize width</label>
            <input class="form-control" asp-for="ResizeWidth" type="number" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Resize height</label>
            <input class="form-control" asp-for="ResizeHeight" type="number" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Format</label>
            <select class="form-select" asp-for="Format">
                <option value="jpg">JPG</option>
                <option value="png">PNG</option>
                <option value="bmp">BMP</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Blur (0-10)</label>
            <input class="form-control" asp-for="Blur" type="number" min="0" max="10" />
        </div>

        <div class="col-md-12">
            <div class="form-check mt-2">
                <input class="form-check-input" asp-for="Sepia" type="checkbox" />
                <label class="form-check-label" asp-for="Sepia">Apply sepia</label>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Download</button>
        <a class="btn btn-outline-secondary"
           href="@Url.Action("Details", "Photos", new { id = Model.PhotoId })">
            Back
        </a>
    </div>
</form>
