@model GalleryApp.Models.ViewModels.Admin.AdminUserDetailsViewModel

@{
    ViewData["Title"] = "Admin - User Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>User details</h2>
    <a class="btn btn-outline-secondary" href="@Url.Action("Stats", "Admin")">Back</a>
</div>

<div class="mb-3">
    <div><strong>Email:</strong> @Model.Email</div>
    <div><strong>UserId:</strong> @Model.UserId</div>
    <div><strong>Total photos:</strong> @Model.TotalPhotos</div>
    <div><strong>Last activity:</strong> @(Model.LastActionUtc?.ToLocalTime().ToString() ?? "-")</div>
</div>

<hr />

<h4 class="mt-3">Recent photos</h4>

@if (Model.RecentPhotos.Count == 0)
{
    <p>No photos uploaded.</p>
}
else
{
    <div class="row">
        @foreach (var p in Model.RecentPhotos)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card">
                    <a href="@Url.Action("Details", "Photos", new { id = p.Id })">
                        <img class="card-img-top"
                             src="@Url.Action("File", "Photos", new { id = p.Id })"
                             style="height: 200px; object-fit: cover;" />
                    </a>
                    <div class="card-body">
                        <div class="text-muted" style="font-size: .9rem;">
                            @p.UploadedAtUtc.ToLocalTime()
                            • @(Math.Round(p.SizeBytes / 1024.0 / 1024.0, 2)) MB
                        </div>
                        <div class="mt-2">@p.Description</div>
                        <div class="mt-3">
                            <a class="btn btn-sm btn-outline-primary"
                               href="@Url.Action("Details", "Photos", new { id = p.Id })">
                                Open
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<hr />

<h4 class="mt-3">Recent logs</h4>

@if (Model.RecentLogs.Count == 0)
{
    <p>No logs found for this user.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Action</th>
                    <th>Entity</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model.RecentLogs)
                {
                    <tr>
                        <td>@l.TimestampUtc.ToLocalTime()</td>
                        <td><strong>@l.Action</strong></td>
                        <td>@(l.EntityType ?? "-") @if (!string.IsNullOrWhiteSpace(l.EntityId)) {
                        <span>(@l.EntityId)</span>
                    }
    </td>
                    <td style="max-width: 600px; white-space: normal;">@l.Details</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
