@model GalleryApp.Controllers.AccountViewModel
@{
    ViewData["Title"] = "Account";
}

<h2>Account</h2>

@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

<div class="card mb-3">
    <div class="card-body">
        <p class="mb-1"><strong>Email:</strong> @Model.Email</p>
        <p class="mb-1"><strong>Current plan:</strong> @Model.CurrentPlan</p>
        <p class="mb-0"><strong>Uploads:</strong> @Model.UploadsCount</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Change plan</h5>

        <form asp-controller="Account" asp-action="ChangePlan" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="NewPlan" class="form-label"></label>
                <select asp-for="NewPlan"
                        class="form-select"
                        asp-items="Html.GetEnumSelectList<GalleryApp.Models.Plan>()">
                </select>
                <span asp-validation-for="NewPlan" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save plan</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
